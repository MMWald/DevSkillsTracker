@page
@model DevSkillsTracker.Web.Pages.LearningLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LearningLog[0].Skill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningLog[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningLog[0].HoursSpent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningLog[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningLog[0].UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LearningLog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursSpent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
